<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESGRating" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        <item name="colorSurface">@color/white</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_500</item>
        <item name="colorPrimaryVariant">@color/main_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">#D1CCDC</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.ESGRating.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ESGRating.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ESGRating.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>