<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/layout_bg"
    android:elevation="8dp"
    android:id="@+id/backgroundCompany">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:transitionName="background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/companyName"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:text="DEUTSCHE"
                android:textFontWeight="700"
                app:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeMaxTextSize="28sp"
                android:autoSizeStepGranularity="2sp"
                android:transitionName="name"
                android:textSize="28sp"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/companyTicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DBB"
                android:transitionName="ticker"
                android:textFontWeight="300"
                android:textSize="20sp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="vertical"
            android:backgroundTint="@color/white">

            <TextView
                android:id="@+id/companyScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="50.37"
                android:transitionName="esg"
                android:textSize="28sp"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/companyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="AA"
                android:transitionName="grade"
                android:textSize="16sp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>